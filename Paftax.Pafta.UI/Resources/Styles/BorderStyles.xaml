<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!--Color Dictionary-->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/PaftaxPaftaUI;component/Resources/Themes/Dark.xaml"/>
        <ResourceDictionary Source="/PaftaxPaftaUI;component/Resources/Styles/FontStyles.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource BorderBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBorderBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>
</ResourceDictionary>