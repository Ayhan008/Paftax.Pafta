<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Paftax.Pafta.UI.Controls">

    <!--Color Dictionary-->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/PaftaxPaftaUI;component/Resources/Themes/Dark.xaml"/>
        <ResourceDictionary Source="/PaftaxPaftaUI;component/Resources/Styles/FontStyles.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type controls:SearchBox}">
        <Setter Property="Background" Value="{DynamicResource SearchBoxBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource SearchBoxBorderBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeSmall}"/>
        <Setter Property="FontWeight" Value="{StaticResource FontWeightBold}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Foreground" Value="{DynamicResource TextColor}"/>
        <Setter Property="PlaceholderText" Value="Search..."/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:SearchBox}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="5"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0"
                                Panel.ZIndex="0"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="25"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="25"/>
                                </Grid.ColumnDefinitions>

                                <!--Search FontIcon-->
                                <controls:FontIcon x:Name="PART_Icon"
                                                   Grid.Column="0"
                                                   Glyph="&#xf78b;"
                                                   Background="Transparent"
                                                   BorderBrush="Transparent"
                                                   BorderThickness="0"
                                                   FontSize="20"
                                                   VerticalAlignment="Center"
                                                   Foreground="{DynamicResource PlaceholderTextColor}"/>

                                <!--TextBox-->
                                <TextBox x:Name="PART_SearchTextBox"
                                         Grid.Column="1"          
                                         Background="Transparent" 
                                         BorderThickness="0" 
                                         Style="{x:Null}"
                                         BorderBrush="Transparent" 
                                         CaretBrush="{TemplateBinding Foreground}"
                                         Padding="0" 
                                         Foreground="{TemplateBinding Foreground}" 
                                         Cursor="IBeam" 
                                         FontFamily="{TemplateBinding FontFamily}"
                                         FontSize="{TemplateBinding FontSize}"
                                         FontWeight="{TemplateBinding FontWeight}">
                                    <TextBox.Template>
                                        <ControlTemplate TargetType="TextBox">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}">
                                                <Grid>
                                                    <ScrollViewer x:Name="PART_ContentHost"
                                                                  Margin="0,0,0,0"
                                                                  FontFamily="{TemplateBinding FontFamily}"
                                                                  FontSize="{TemplateBinding FontSize}"
                                                                  FontWeight="{TemplateBinding FontWeight}"
                                                                  VerticalAlignment="Center"/>
                                                </Grid>
                                            </Border>
                                        </ControlTemplate>
                                    </TextBox.Template>
                                </TextBox>

                                <!--Placeholder Text-->
                                <TextBlock Grid.Column="1"
                                           x:Name="PART_PlaceholderText"
                                           Text="{TemplateBinding PlaceholderText}"
                                           Style="{x:Null}"
                                           Foreground="{DynamicResource PlaceholderTextColor}"
                                           Margin="5,0,0,0"
                                           VerticalAlignment="Center"
                                           IsHitTestVisible="False"
                                           FontFamily="{TemplateBinding FontFamily}"
                                           FontSize="{TemplateBinding FontSize}"
                                           FontWeight="{TemplateBinding FontWeight}"/>

                                <!--Clear Button-->
                                <Button x:Name="PART_ClearButton"
                                        Grid.Column="2"
                                        Cursor="Hand"
                                        Panel.ZIndex="1"
                                        BorderThickness="0"
                                        Style="{x:Null}"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="Transparent"
                                        Visibility="Collapsed"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Grid>
                                                <controls:FontIcon Glyph="&#xf78a;"
                                                                   HorizontalAlignment="Center"
                                                                   Background="Transparent"
                                                                   BorderBrush="Transparent"
                                                                   BorderThickness="0"
                                                                   FontSize="20"
                                                                   VerticalAlignment="Center"
                                                                   Foreground="{DynamicResource PlaceholderTextColor}"/>
                                            </Grid>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </Grid>
                        </Border>

                        <Border x:Name="PART_BottomBorder" 
                                Grid.Row="1" 
                                Background="Transparent"
                                HorizontalAlignment="Stretch" 
                                VerticalAlignment="Stretch"
                                BorderThickness="0,1,0,0"
                                BorderBrush="Transparent" 
                                Margin="0,-1,0,0" 
                                Panel.ZIndex="1"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>