<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Paftax.Pafta.UI.Controls">

    <!--Color Dictionary-->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/PaftaxPaftaUI;component/Resources/Themes/Dark.xaml"/>
        <ResourceDictionary Source="/PaftaxPaftaUI;component/Resources/Styles/FontStyles.xaml"/>
        <ResourceDictionary Source="/PaftaxPaftaUI;component/Resources/Styles/ButtonStyles.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    
    <Style TargetType="{x:Type controls:TitleBar}">
        <Setter Property="Background" Value="{DynamicResource TitleBarBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextColor}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource TitleBarBorderBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeMedium}"/>
        <Setter Property="FontWeight" Value="{StaticResource FontWeightBold}"/>
        <Setter Property="IconSize" Value="20"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="MinHeight" Value="25"/>
        <Setter Property="MinWidth" Value="200"/>
        <Setter Property="CloseButton" Value="True"/>
        <Setter Property="MaximizeButton" Value="False"/>
        <Setter Property="MinimizeButton" Value="False"/>
        <Setter Property="HelpButton" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:TitleBar}">
                    <Border x:Name="PART_Border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="10,10,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="30" x:Name="HelpButtonColumn"/>
                                <ColumnDefinition Width="30" x:Name="MinimizeButtonColumn"/>
                                <ColumnDefinition Width="30" x:Name="MaximizeButtonColumn"/>
                                <ColumnDefinition Width="30" x:Name="CloseButtonColumn"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock x:Name="PART_Title"
                                       Grid.Column="0"
                                       Background="Transparent"
                                       Foreground="{TemplateBinding Foreground}"
                                       Text="Title"
                                       FontFamily="{TemplateBinding FontFamily}"
                                       FontSize="{TemplateBinding FontSize}"
                                       FontWeight="{TemplateBinding FontWeight}"
                                       Margin="10,0,0,0" 
                                       Padding="0"
                                       IsHitTestVisible="False"
                                       HorizontalAlignment="Left" 
                                       VerticalAlignment="Center"/>

                            <Button x:Name="PART_CloseButton" Grid.Column="4" Style="{StaticResource TitleBarCloseButton}" FontSize="{TemplateBinding IconSize}" FontWeight="{TemplateBinding FontWeight}"/>
                            <Button x:Name="PART_MaximizeButton" Grid.Column="3" Style="{StaticResource TitleBarMaximizeButton}" FontSize="{TemplateBinding IconSize}" FontWeight="{TemplateBinding FontWeight}"/>
                            <Button x:Name="PART_MinimizeButton" Grid.Column="2" Style="{StaticResource TitleBarMinimizeButton}" FontSize="{TemplateBinding IconSize}" FontWeight="{TemplateBinding FontWeight}"/>
                            <Button x:Name="PART_HelpButton" Grid.Column="1" Style="{StaticResource TitleBarHelpButton}" FontSize="{TemplateBinding IconSize}" FontWeight="{TemplateBinding FontWeight}"/>
                        </Grid>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="CloseButton" Value="False">
                            <Setter TargetName="CloseButtonColumn" Property="ColumnDefinition.Width" Value="0"/>
                        </Trigger>

                        <Trigger Property="MaximizeButton" Value="False">
                            <Setter TargetName="MaximizeButtonColumn" Property="ColumnDefinition.Width" Value="0"/>
                        </Trigger>

                        <Trigger Property="MinimizeButton" Value="False">
                            <Setter TargetName="MinimizeButtonColumn" Property="ColumnDefinition.Width" Value="0"/>
                        </Trigger>

                        <Trigger Property="HelpButton" Value="False">
                            <Setter TargetName="HelpButtonColumn" Property="ColumnDefinition.Width" Value="0"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>