<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Window -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#454f61"/>
    <SolidColorBrush x:Key="WindowBorderBrush" Color="#404348"/>

    <!-- TitleBar -->
    <SolidColorBrush x:Key="TitleBarBackgroundBrush" Color="#454f61"/>
    <SolidColorBrush x:Key="TitleBarBorderBrush" Color="#404348"/>

    <!-- DataGrid -->
    <SolidColorBrush x:Key="DataGridBackgroundBrush" Color="#454f61"/>
    <SolidColorBrush x:Key="DataGridBorderBrush" Color="#3C3C3C"/>
    <SolidColorBrush x:Key="DataGridColumnHeaderBackgroundBrush" Color="#29303b"/>
    <SolidColorBrush x:Key="DataGridColumnHeaderBorderBrush" Color="#454f61"/>
    <SolidColorBrush x:Key="DataGridRowHoverBackgroundBrush" Color="#39414f"/>
    <SolidColorBrush x:Key="DataGridRowHoverBorderBrush" Color="#39414f"/>
    <SolidColorBrush x:Key="DataGridRowClickedBackgroundBrush" Color="#39414f"/>
    <SolidColorBrush x:Key="DataGridRowClickedBorderBrush" Color="#39414f"/>
    <SolidColorBrush x:Key="DataGridGridLinesBrush" Color="#515b6d"/>

    <!-- Button -->   
    <!--Generic Button-->
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#454f61"/>
    <SolidColorBrush x:Key="ButtonBorderBrush" Color="#7b8ba1"/>
    <SolidColorBrush x:Key="ButtonHoverBackgroundBrush" Color="#454f61"/>
    <SolidColorBrush x:Key="ButtonHoverInnerBorderBrush" Color="#7e8ea4"/>
    <SolidColorBrush x:Key="ButtonHoverOuterBorderBrush" Color="#576276"/>
    <SolidColorBrush x:Key="ButtonPressedBackgroundBrush" Color="#7e8ea4"/>
    <SolidColorBrush x:Key="ButtonPressedInnerBorderBrush" Color="#7b8ba1"/>
    <SolidColorBrush x:Key="ButtonPressedOuterBorderBrush" Color="#576276"/>
    <SolidColorBrush x:Key="ButtonDisabledBackgroundBrush" Color="#2b6b90"/>
    <SolidColorBrush x:Key="ButtonDisabledBorderBrush" Color="#2b6b90"/>
    <SolidColorBrush x:Key="ButtonResultBorderBrush" Color="#2f678a"/>
    <SolidColorBrush x:Key="ButtonResultBackgroundBrush" Color="#0696d7"/>
    <!--TitleBar Close Button-->
    <SolidColorBrush x:Key="TitleBarCloseButtonBackgroundBrush" Color="#454f61"/>
    <SolidColorBrush x:Key="TitleBarCloseButtonHoverBackgroundBrush" Color="#C50F1F"/>
    <SolidColorBrush x:Key="TitleBarCloseButtonPressedBackgroundBrush" Color="#C50F1F"/>
    <!--TitleBar Generic Button-->
    <SolidColorBrush x:Key="TitleBarButtonBackgroundBrush" Color="#454f61"/>
    <SolidColorBrush x:Key="TitleBarButtonHoverBackgroundBrush" Color="#5a6578"/>
    <SolidColorBrush x:Key="TitleBarButtonPressedBackgroundBrush" Color="#2c323d"/>

    <!-- TextBox -->
    <SolidColorBrush x:Key="TextBoxBackgroundBrush" Color="#303946"/>
    <SolidColorBrush x:Key="TextBoxBorderBrush" Color="#343d4b"/>
    <SolidColorBrush x:Key="TextBoxClickedBackgroundBrush" Color="#303946"/>
    <SolidColorBrush x:Key="TextBoxClickedBorderBrush" Color="#343d4b"/>
    <SolidColorBrush x:Key="TextBoxHoverBottomBorderBrush" Color="#b9d0eb"/>
    <SolidColorBrush x:Key="TextBoxHoverBottomBackgroundBrush" Color="#576276"/>
    <SolidColorBrush x:Key="TextBoxClickedBottomBorderBrush" Color="#38abdf"/>
    <SolidColorBrush x:Key="TextBoxClickedBottomBackgroundBrush" Color="#416f8d"/>
    
    <!--SearchBox-->
    <SolidColorBrush x:Key="SearchBoxBackgroundBrush" Color="#303946"/>
    <SolidColorBrush x:Key="SearchBoxBorderBrush" Color="#343d4b"/>
    <SolidColorBrush x:Key="SearchBoxClickedBackgroundBrush" Color="#303946"/>
    <SolidColorBrush x:Key="SearchBoxClickedBorderBrush" Color="#343d4b"/>
    <SolidColorBrush x:Key="SearchBoxHoverBottomBorderBrush" Color="#b9d0eb"/>
    <SolidColorBrush x:Key="SearchBoxHoverBottomBackgroundBrush" Color="#576276"/>
    <SolidColorBrush x:Key="SearchBoxClickedBottomBorderBrush" Color="#38abdf"/>
    <SolidColorBrush x:Key="SearchBoxClickedBottomBackgroundBrush" Color="#416f8d"/>

    <!-- RadioButton -->
    <SolidColorBrush x:Key="RadioButtonBorderBrush" Color="#ffffff"/>
    <SolidColorBrush x:Key="RadioButtonBackgroundBrush" Color="#ffffff"/>
    <SolidColorBrush x:Key="RadioButtonCheckedBorderBrush" Color="#ffffff"/>
    <SolidColorBrush x:Key="RadioButtonCheckedBackgroundBrush" Color="#ffffff"/>
    <SolidColorBrush x:Key="RadioButtonCheckmarkBackgroundBrush" Color="Black"/>
    <SolidColorBrush x:Key="RadioButtonCheckmarkBorderBrush" Color="Black"/>
    
    <!-- ScrollBar -->
    <SolidColorBrush x:Key="ScrollBarBackgroundBrush" Color="#454f61"/>
    <SolidColorBrush x:Key="ScrollBarBorderBrush" Color="#454f61"/>
    <SolidColorBrush x:Key="ScrollBarThumbBackgroundBrush" Color="#5c697d"/>
    <SolidColorBrush x:Key="ScrollBarThumbBorderBrush" Color="#5c697d"/>
    <SolidColorBrush x:Key="ScrollBarThumbHoverBackgroundBrush" Color="#8191a7"/>
    <SolidColorBrush x:Key="ScrollBarThumbHoverBorderBrush" Color="#8191a7"/>

    <!-- ComboBox -->
    <SolidColorBrush x:Key="ComboBoxBackgroundBrush" Color="#303946"/>
    <SolidColorBrush x:Key="ComboBoxBorderBrush" Color="#343d4b"/>
    <SolidColorBrush x:Key="ComboBoxHoverBottomBorderBrush" Color="#b9d0eb"/>
    <SolidColorBrush x:Key="ComboBoxoverBottomBackgroundBrush" Color="#576276"/>

    <!-- CheckBox -->
    <SolidColorBrush x:Key="CheckBoxBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="CheckBoxBorderBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="CheckBoxHoverOuterBorderBrush" Color="#576276"/>
    <SolidColorBrush x:Key="CheckBoxHoverInnerBorderBrush" Color="#FFFFFF"/>
    
    <!--Border-->
    <SolidColorBrush x:Key="BorderBorderBrush" Color="#7b8ba1"/>
    <SolidColorBrush x:Key="BorderBackgroundBrush" Color="#7b8ba1"/>

    <!-- FontColor -->
    <SolidColorBrush x:Key="TextColor" Color="#f5f5f5"/>
    <SolidColorBrush x:Key="PlaceholderTextColor" Color="#a2a6b0"/>
    <SolidColorBrush x:Key="DisabledTextColor" Color="#8b939f"/>
    
    <!-- SheetCard -->
    <SolidColorBrush x:Key="SheetCardActiveBorderBrush" Color="#0696d7"/>
    <SolidColorBrush x:Key="SheetCardActiveBackgroundBrush" Color="#0696d7"/>
    <SolidColorBrush x:Key="SheetCardNewBorderBrush" Color="DarkGreen"/>
    <SolidColorBrush x:Key="SheetCardNewBackgroundBrush" Color="DarkGreen"/>
    <SolidColorBrush x:Key="SheetCardBorderBrush" Color="#404348"/>
    <SolidColorBrush x:Key="SheetCardBackgroundBrush" Color="#303946"/>
</ResourceDictionary>