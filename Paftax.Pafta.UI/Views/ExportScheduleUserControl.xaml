<UserControl x:Class="Paftax.Pafta.UI.Views.ExportScheduleUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:Paftax.Pafta.UI.Views"
             xmlns:properties="clr-namespace:Paftax.Pafta.UI.AttachedProperties" properties:ThemeChanged.EnableTheme="True"           
             xmlns:vm="clr-namespace:Paftax.Pafta.UI.ViewModels" 
             xmlns:controls="clr-namespace:Paftax.Pafta.UI.Controls"       
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:ExportScheduleViewModel}"
             d:DesignHeight="700" 
             d:DesignWidth="400">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Paftax.Pafta.UI;component/Resources/Themes/Dark.xaml"/>
                <ResourceDictionary Source="/Paftax.Pafta.UI;component/Resources/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="45"/>
        </Grid.RowDefinitions>

        <controls:SearchBox Grid.Row="0" 
                            VerticalAlignment="Stretch" 
                            HorizontalAlignment="Stretch" 
                            Margin="10,0,10,0" Height="30"
                            PlaceholderText="Search for schedule..."
                            SearchText="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <Border Grid.Row="0" 
                HorizontalAlignment="Stretch" 
                Height="1"
                VerticalAlignment="Top"/>

        <DataGrid x:Name="SchedulesDataGrid" 
                  Grid.Row="1" 
                  AutoGenerateColumns="False" 
                  Margin="10,0,10,10" 
                  properties:MutipleCheck.IsEnabled="True"
                  ItemsSource="{Binding Schedules}">
            <DataGrid.Columns>
                <DataGridTemplateColumn Width="30">
                    <DataGridTemplateColumn.Header>
                        <CheckBox x:Name="SelectAllCheckBox" 
                                  IsChecked="{Binding DataContext.IsAllChecked, Mode=TwoWay, RelativeSource={RelativeSource AncestorType=DataGrid}}"/>
                    </DataGridTemplateColumn.Header>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding IsChecked, Mode=TwoWay}" 
                                      Foreground="{DynamicResource DataGridForeground}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Schedule Name" 
                                    Foreground="{DynamicResource DataGridForeground}"
                                    Binding="{Binding Name}" 
                                    Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Export Options" 
                       FontWeight="Bold" 
                       Grid.Row="0"
                       VerticalAlignment="Center"
                       Margin="10,0,0,0" 
                       IsHitTestVisible="False" 
                       FontSize="{StaticResource FontSizeSmall}"/>

            <Border Grid.Row="1"  
                    HorizontalAlignment="Stretch" 
                    Height="1"
                    VerticalAlignment="Top" 
                    Margin="10,0,10,0"/>

            <Grid Grid.Row="1" VerticalAlignment="Center" Margin="10,5,10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Folder:" 
                          VerticalAlignment="Center"
                          IsHitTestVisible="False" 
                          Grid.Column="0" 
                          FontSize="{StaticResource FontSizeSmall}"/>

                <TextBox x:Name="FolderTextBox" 
                         Text="{Binding ExportFolderPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         VerticalAlignment="Center" 
                         Margin="10,0,0,0" 
                         Height="25"
                         Grid.Column="1"
                         HorizontalAlignment="Stretch"/>
            </Grid>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Left"
                        Grid.Row="2" 
                        VerticalAlignment="Center" 
                        Margin="10,0,10,5">
                <RadioButton x:Name="MergedButton" 
                             Content="Merged"
                             Margin="0,0,10,0" 
                             IsChecked="{Binding IsMerged, Mode=TwoWay}"/>
                <RadioButton x:Name="SeperatedButton" 
                             Content="Seperated" 
                             IsChecked="{Binding IsSeperated, Mode=TwoWay}"/>
            </StackPanel>
        </Grid>

        <Border Grid.Row="2"  HorizontalAlignment="Stretch" Height="1" VerticalAlignment="Bottom"/>

        <StackPanel Orientation="Horizontal" Grid.Row="3" 
                    HorizontalAlignment="Right" 
                    Margin="0,0,10,0" 
                    Height="25">
            <Button x:Name="ExportButton" 
                    Style="{StaticResource ResultButtonStyle}"
                    Content="Export" 
                    Width="80" 
                    Margin="0,0,10,0"
                    Command="{Binding ExportCommand}"/>
            <Button x:Name="CancelButton" 
                    Content="Cancel"
                    Width="80"
                    Command="{Binding CancelCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
