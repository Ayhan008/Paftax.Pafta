<UserControl x:Class="Paftax.Pafta.UI.Views.GraphicDesignerUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Paftax.Pafta.UI.Views"
             xmlns:drawing="clr-namespace:Paftax.Pafta.Drawing;assembly=Paftax.Pafta.Drawing"
             xmlns:controls="clr-namespace:Paftax.Pafta.UI.Controls"
             xmlns:converters="clr-namespace:Paftax.Pafta.UI.Converters"
             xmlns:properties="clr-namespace:Paftax.Pafta.UI.AttachedProperties" properties:ThemeChanged.EnableTheme="True"
             xmlns:vm="clr-namespace:Paftax.Pafta.UI.ViewModels" 
             d:DataContext="{d:DesignInstance Type=vm:GraphicDesignerViewModel}" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Paftax.Pafta.UI;component/Resources/Themes/Dark.xaml"/>
                <ResourceDictionary Source="/Paftax.Pafta.UI;component/Resources/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <converters:PointDListToPointCollection x:Key="PointsConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Border Background="{DynamicResource DataGridColumnHeaderBackground}">
        <Grid>
            <ScrollViewer HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto" 
                          x:Name="ScrollViewer"
                          Focusable="False">
                <drawing:DrawingCanvas x:Name="DrawingCanvas" 
                                       Background="{DynamicResource DataGridColumnHeaderBackground}" 
                                       Foreground="{DynamicResource ButtonForeground}"
                                       Scale="{Binding Scale}"/>
            </ScrollViewer>
        </Grid>
    </Border>
</UserControl>
