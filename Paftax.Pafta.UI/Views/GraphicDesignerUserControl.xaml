<UserControl x:Class="Paftax.Pafta.UI.Views.GraphicDesignerUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Paftax.Pafta.UI.Views"
             xmlns:controls="clr-namespace:Paftax.Pafta.UI.Controls"
             xmlns:converters="clr-namespace:Paftax.Pafta.UI.Converters"
             xmlns:properties="clr-namespace:Paftax.Pafta.UI.AttachedProperties" properties:ThemeChanged.EnableTheme="True"
             xmlns:vm="clr-namespace:Paftax.Pafta.UI.ViewModels" 
             d:DataContext="{d:DesignInstance Type=vm:GraphicDesignerViewModel}" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PaftaxPaftaUI;component/Resources/Themes/Dark.xaml"/>
                <ResourceDictionary Source="/PaftaxPaftaUI;component/Resources/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <converters:RevitPointsToWindowsPointCollectionConverter x:Key="PointsConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Border Background="{DynamicResource DataGridColumnHeaderBackground}">
        <Grid>
            <ScrollViewer HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto" 
                          x:Name="CanvasScrollViewer"
                          Focusable="False">
                <Canvas x:Name="MainCanvas" Background="{DynamicResource DataGridColumnHeaderBackground}" Width="{Binding CanvasWidth}" Height="{Binding CanvasHeight}">
                    <ItemsControl ItemsSource="{Binding Rooms}" >
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Polygon Points="{Binding RoomGeometryData.GeomertyPoints, Converter={StaticResource PointsConverter}}"
                                         Stroke="Black" Fill="Transparent" StrokeThickness="10"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Canvas>
            </ScrollViewer>
        </Grid>
    </Border>
</UserControl>
