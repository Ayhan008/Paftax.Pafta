<UserControl x:Class="Paftax.Pafta.UI.Views.RoomToSheetUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Paftax.Pafta.UI.Views"
             xmlns:controls="clr-namespace:Paftax.Pafta.UI.Controls"
             xmlns:vm="clr-namespace:Paftax.Pafta.UI.ViewModels"
             xmlns:properties="clr-namespace:Paftax.Pafta.UI.AttachedProperties" properties:ThemeChanged.EnableTheme="True"
             xmlns:views="clr-namespace:Paftax.Pafta.UI.Views" d:DataContext="{d:DesignInstance Type=vm:RoomToSheetViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="900">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PaftaxPaftaUI;component/Resources/Themes/Dark.xaml"/>
                <ResourceDictionary Source="/PaftaxPaftaUI;component/Resources/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="45"/>
        </Grid.RowDefinitions>

        <Border HorizontalAlignment="Stretch" Grid.Row="0" Height="1" VerticalAlignment="Top"/>

        <Border HorizontalAlignment="Stretch" Grid.Row="0" Height="1" VerticalAlignment="Bottom"/>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <DataGrid x:Name="TemplateDataGrid" Margin="10" ItemsSource="{Binding ViewCreationTemplates}" AutoGenerateColumns="False" >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Template Name" Binding="{Binding Name}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

            <Border Grid.Column="1" Width="1" HorizontalAlignment="Left" Margin="0.5,1,0,1"/>
            
            <views:GraphicDesignerUserControl Grid.Column="1" x:Name="GraphicDesignerControl" Margin="10" DataContext="{Binding GraphicDesignerViewModel}"/>
        </Grid>
    </Grid>
</UserControl>
